#!/bin/bash

calendar() {
    date "+%d.%m.%Y - %H:%M"
}

battery() {
    if [ -d /sys/class/power_supply/BAT0 ]
    then
        for cap in $(cat /sys/class/power_supply/BAT?/capacity)
        do
            echo -ne "$cap% "
        done
    else
        echo "AC"
    fi
}
echo "  $(calendar) -- $(battery)  "
