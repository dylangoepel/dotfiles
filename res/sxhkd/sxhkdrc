    volume inc
ctrl + F2
    volume dec
ctrl + F1
    volume mute

XF86AudioNext
    cmus-remote --next
XF86AudioPrev
    cmus-remote --prev
XF86AudioPause
    cmus-remote --pause
XF86AudioStop
    cmus-remote --stop

XF86MonBrightnessUp
    sudo light -A 5
XF86MonBrightnessUp
    sudo light -D 5

ctrl + F5
    sudo -light -S 1
ctrl + F6
    sudo light -S 60

