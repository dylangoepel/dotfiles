ctrl + F4
    volume cycle
XF86AudioRaiseVolume
    volume inc
ctrl + F3
    volume inc
XF86AudioLowerVolume
    volume dec
ctrl + F2
    volume dec

XF86AudioMute
    volume mute
ctrl + F1
    volume mute

XF86AudioNext
    cmus-remote --next
XF86AudioPrev
    cmus-remote --prev
XF86AudioPause
    cmus-remote --pause
XF86AudioStop
    cmus-remote --stop

XF86MonBrightnessUp
    brightness up
ctrl + F5
    brightness up
XF86MonBrightnessUp
    brightness down
ctrl + F6
    brightness down

super + Return
    alacritty
super + d
    dmenu_run

super + {_,shift +}{1, 2, 3, 4, 5, 6, 7, 8, 9}
    bspc {desktop -f,node -d} ^{1,2,3,4,5,6,7,8,9}

super + F2
    firefox

super + q
    bspc node -k

super + z
    bspc node -s biggest

super + {_, shift +}{h,j,k,l}
    bspc node -{f,s} {west,south,north,east}

super + {v,s}
    bspc node -p {south,east}
super + space
    if [ -z "$(bspc query -N -n focused.floating)" ]; then \
        bspc node focused -t floating; \
    else \
        bspc node focused -t tiled; \
    fi
super + f
    bspc desktop focused -l next

alt + {l,h,j,k}
    bspwmresize expand {east,west,south,north} 5

alt + shift + {l,h,j,k}
    bspwmresize shrink {west,east,north,south} 5
